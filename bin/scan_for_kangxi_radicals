#!/usr/bin/env python

import sys
import codecs
import zhonglib

if not len(sys.argv) == 2:
    print 'usage: %s <filename>'%sys.argv[0]
    sys.exit(1)

file_name = sys.argv[1]

with codecs.open(file_name, 'r', encoding='utf-8') as f:
    line_number = 0
    result = []
    for line in f:
        line_number += 1
        for ch in line:
            if zhonglib.is_kangxi_radical(ch):
                result.append(line_number)
    result = set(result)
    print result
